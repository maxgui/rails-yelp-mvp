<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="form">
        <%= simple_form_for @restaurant do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :phone_number %>
          <%= f.input :category, collection: @categories %>
          <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
      </div>
    </div>
  </div>
</div>
