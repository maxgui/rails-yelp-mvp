<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <h3>Add a review for <%= @restaurant.name %></h3>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: @ratings %>
        <%= f.button :submit, class: 'btn btn-info' %>
      <% end %>
    </div>
  </div>
</div>
